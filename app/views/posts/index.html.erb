<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<%= form_with(url: posts_path, method: :get, local: true) do |form| %>
  <div>
    <%= form.label :search, "Search" %>
    <%= form.text_field :search, value: params[:search] %>
  </div>

  <div class="field">
    <%= form.label :type %> <br />
    <%= form.select :type, options_for_select([["All", "all"], ['Title', "title"], ['Tag', "tag"], ["Category", "category"]], "all") %>
  </div>

  <div>
    <%= form.submit "Search" %>
  </div>
<% end %>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
<%= link_to "Cerrar Sesion", destroy_user_session_path, data: {turbo_method: :delete} %>
